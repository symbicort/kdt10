        function checkForm(form){
            // 1)name으로 폼 선택
            // const form = document.forms('valiForm');
            console.log(form);

            if(form.id.value == ''){
                form.id.focus();
                alert('아이디를 입력해주세요');

                return false; //submit 이벤트가 일어나지 않음
