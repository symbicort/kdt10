        const socket = io.connect();

        socket.on('connect', () => {
            console.log('클라이언트 연결 완료 >', socket.id);
        });

        socket.on('notice', (msg) => {
            document.getElementById('chatBox').insertAdjacentHTML('beforeend', `<div class='notice'>${msg}</div>`);
        })

        function inputChat(){
